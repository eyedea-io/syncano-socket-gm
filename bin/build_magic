#!/usr/bin/env bash

BASEDIR=$(dirname "$0")

mkdir -p ${BASEDIR}../dist/

sudo apt-get update
sudo apt-get install wget

cd /tmp/
mkdir gm

wget https://downloads.sourceforge.net/graphicsmagick/graphicsmagick/1.3.28/GraphicsMagick-1.3.28.tar.g
./configure --enable-shared=no --enable-static=yes --with-webp=no --prefix=/tmp/gm
make
make install
cp /tmp/gm/bin/gm ${BASEDIR}../dist/
