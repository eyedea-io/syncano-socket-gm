#!/usr/bin/env bash

BASEDIR=$(dirname "$0")

SCRIPTPATH="$( cd "$(dirname "$0")" ; pwd -P )"
mkdir -p ${SCRIPTPATH}/../dist/

sudo apt-get update
sudo apt-get install wget

cd /tmp/
mkdir gm

wget https://downloads.sourceforge.net/graphicsmagick/graphicsmagick/1.3.28/GraphicsMagick-1.3.28.tar.gz
tar -zxvf GraphicsMagick-1.3.28.tar.gz
cd /tmp/GraphicsMagick-1.3.28

./configure --enable-shared=no --enable-static=yes --with-webp=no --prefix=/tmp/gm
make
make install

cp /tmp/gm/bin/gm ${SCRIPTPATH}/../dist/


cd /tmp/
mkdir im

wget https://www.imagemagick.org/download/ImageMagick-7.0.7-22.tar.gz
tar -zxvf ImageMagick-7.0.7-22.tar.gz
cd ImageMagick-7.0.7-22

./configure --enable-shared=no --enable-static=yes --with-webp=no --prefix=/tmp/im
make
make install

cp /tmp/im/bin/magick ${SCRIPTPATH}/../dist/
